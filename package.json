{
  "name": "@antisatori/tapl",
  "version": "0.0.4",
  "description": "lambda calculus compiler based on Types and Programming Languages",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "rescript",
    "lambda-calculus",
    "compiler",
    "llvm"
  ],
  "author": "Koji Ishimoto",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/**/*.mjs",
    "dist/cli/**/*",
    "README.md"
  ],
  "bin": {
    "lambda": "dist/cli/cli.js"
  },
  "imports": {
    "#parser": "./src/Lambda/Parser.mjs",
    "#compiler": "./src/Lambda/Compile.mjs",
    "#ast": "./src/Lambda/Ast.mjs",
    "#anf": "./src/Lambda/ANF.mjs",
    "#closure-conversion": "./src/Lambda/ClosureConversion.mjs"
  },
  "scripts": {
    "start": "./dist/cli/cli.js",
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:format": "rescript format",
    "res:doc": "rescript-tools doc src/TypedLambda.res",
    "res:dev": "rescript build -w",
    "cli:build": "tsc && chmod +x dist/cli/cli.js",
    "cli:dev": "tsc --watch",
    "build": "pnpm run res:build && pnpm run cli:build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@rescript/core": "^1.5.2",
    "@types/react": "^19.2.2",
    "ink": "^6.3.1",
    "pastel": "^3.0.0",
    "react": "^19.2.0",
    "rescript": "11.1.4",
    "rescript-nodejs": "^15.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@rescript/tools": "^0.6.0",
    "@types/node": "^24.7.2",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
