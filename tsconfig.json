{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"types": ["node"],
		"jsx": "react",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": false,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"rootDir": "."
	},
	"include": ["cli/**/*"],
	"exclude": ["node_modules", "dist", "lib"]
}
